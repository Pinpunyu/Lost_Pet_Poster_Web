<div class="container mx-auto p-5 my-5 bg-secondary text-light">
  <h2 class="text-center font-italic">填寫表單，新增走失資訊</h2>
  <div class="p-3 mt-3">
    <form action="/articles/create" method="POST" class="font-weight-light">
      <!-- 走失資訊標題  -->
      <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label">走失資訊標題 <small><i
              class="fas fa-star-of-life text-danger"></i></small></label>
        <div class="col-sm-10">
          <input type="text" name="title" class="form-control" id="title" placeholder="名稱" required>
        </div>
      </div>

      <!-- 走失資訊照片網址  -->
      <div class="form-group row">
        <label for="image" class="col-sm-2 col-form-label">走失資訊照片網址</label>
        <div class="col-sm-10">
          <input type="text" name="image" class="form-control" id="image"
            placeholder="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5630/04.jpg">
        </div>
      </div>

      <!-- 走失時間  -->
      <div class="form-group row">
        <label for="location" class="col-sm-2 col-form-label">走失時間</label>
        <div class="col-sm-10">
          <input type="text" name="release_date" class="form-control" id="release_date"
            placeholder="2018-07-04">
        </div>
      </div>

      <!-- 走失資訊簡介  -->
      <div class="form-group row">
        <label for="description" class="col-sm-2 col-form-label">走失資訊簡介</label>
        <div class="col-sm-10">
          <textarea name="description" id="description" cols="48" rows="3"></textarea>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-10">
          <button type="submit" class="btn btn-primary" id="createItem">提交</button>
        </div>
      </div>

    </form>
  </div>
</div>